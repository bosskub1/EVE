```lua

--// services
local players = game:GetService("Players")
local runService = game:GetService("RunService")
local userInput = game:GetService("UserInputService")
local workspace = game:GetService("Workspace")
local camera = workspace.CurrentCamera

--// gui
local playerGui = players.LocalPlayer:WaitForChild("PlayerGui")
local screenGui = Instance.new("ScreenGui", playerGui)
screenGui.Name = "ESP_GUI"

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 180, 0, 110)
frame.Position = UDim2.new(0, 20, 0, 200)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BackgroundTransparency = 0.15
frame.BorderSizePixel = 0
frame.Visible = true

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 25)
title.BackgroundTransparency = 1
title.Text = "esp control"
title.TextColor3 = Color3.new(1, 1, 1)
title.TextScaled = true
title.Font = Enum.Font.GothamBold

local toggleButton = Instance.new("TextButton", frame)
toggleButton.Size = UDim2.new(1, -20, 0, 30)
toggleButton.Position = UDim2.new(0, 10, 0, 35)
toggleButton.Text = "esp: on"
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
toggleButton.BorderSizePixel = 0
toggleButton.Font = Enum.Font.Gotham
toggleButton.TextScaled = true

local slider = Instance.new("TextBox", frame)
slider.Size = UDim2.new(1, -20, 0, 25)
slider.Position = UDim2.new(0, 10, 0, 75)
slider.Text = "0.2"
slider.PlaceholderText = "outline transparency"
slider.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
slider.TextColor3 = Color3.new(1, 1, 1)
slider.Font = Enum.Font.Gotham
slider.TextScaled = true
slider.BorderSizePixel = 0

--// settings
local espEnabled = true
local outlineTransparency = 0.2
local visibleColor = Color3.fromRGB(0, 255, 0)
local hiddenColor = Color3.fromRGB(255, 0, 0)
local raycastParams = RaycastParams.new()
raycastParams.FilterType = Enum.RaycastFilterType.Blacklist
raycastParams.IgnoreWater = true
local guiVisible = true

--// gui toggle
userInput.InputBegan:Connect(function(input, processed)
	if processed then return end
	if input.KeyCode == Enum.KeyCode.P then
		guiVisible = not guiVisible
		frame.Visible = guiVisible
	end
end)

--// button + slider
toggleButton.MouseButton1Click:Connect(function()
	espEnabled = not espEnabled
	toggleButton.Text = "esp: " .. (espEnabled and "on" or "off")
end)

slider.FocusLost:Connect(function()
	local val = tonumber(slider.Text)
	if val and val >= 0 and val <= 1 then
		outlineTransparency = val
	end
end)

--// setup esp
local function setupOutline(model)
	local highlight = model:FindFirstChildOfClass("Highlight")
	if not highlight then
		highlight = Instance.new("Highlight")
		highlight.Adornee = model
		highlight.Parent = model
	end
	highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
	highlight.FillTransparency = 1
	highlight.OutlineTransparency = outlineTransparency
	highlight.OutlineColor = visibleColor
	return highlight
end

--// main loop
local step = 0
runService.Heartbeat:Connect(function(dt)
	step += dt
	if step < 0.1 then return end
	step = 0

	for _, model in ipairs(workspace:GetChildren()) do
		if model:IsA("Model") and model.Name == "Male" then
			local root = model:FindFirstChild("HumanoidRootPart") or model:FindFirstChild("Head")
			if root then
				local hl = model:FindFirstChildOfClass("Highlight") or setupOutline(model)
				if espEnabled then
					raycastParams.FilterDescendantsInstances = { players.LocalPlayer.Character or nil }
					local ray = workspace:Raycast(camera.CFrame.Position, (root.Position - camera.CFrame.Position), raycastParams)
					local visible = not ray or ray.Instance:IsDescendantOf(model)
					hl.Enabled = true
					hl.OutlineColor = visible and visibleColor or hiddenColor
					hl.OutlineTransparency = outlineTransparency
				elseif hl then
					hl.Enabled = false
				end
			end
		end
	end
end)
```
